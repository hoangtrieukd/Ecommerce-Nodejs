        ],
        "responses": {
          "201": {
            "description": "user created",
            "schema": {
              "properties": {
                "message": {
                  "type": "string",
                  "example": "user created"
                }
              }
            }
          },
          "400": {
            "description": "bad request",
            "schema": {
              "properties": {
                "status": {
                  "type": "number",
                  "example": 400.0
                },
                "type": {
                  "type": "string",
                  "example": "missing_field"
                },
                "error": {
                  "type": "object",
                  "properties": {
                    "errors": {
                      "type": "array",
                      "items": {
                        "type": "object",
                        "properties": {
                          "param": {
                            "type": "string",
                            "example": "username"
                          },
                          "msg": {
                            "type": "string",
                            "example": "username is required"
                          }
                        }
                      }
                    }
                  }
                }
              }
            }
          },
          "409": {
            "description": "existed user",
            "schema": {
              "properties": {
                "status": {
                  "type": "number",
                  "example": 409.0
                },
                "type": {
                  "type": "string",
                  "example": "invalid_field"
                },
                "error": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string",
                      "example": "user is existed"
                    }
                  }
                }
              }
            }
          }
        }
      }
